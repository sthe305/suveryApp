@model SurveyResultsViewModel

@{
    ViewData["Title"] = "Survey Results";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">Survey Results</div>
            <div class="card-body">
                <p>Total number of surveys: @Model.TotalSurveys</p>
                <p>Average age: @Model.AverageAge</p>
                <p>Oldest person who participated in the survey: @Model.MaxAge</p>
                <p>Youngest person who participated in the survey: @Model.MinAge</p>

                <p>Percentage of people who like Pizza: @Model.PizzaPercentage%</p>
                <p>Percentage of people who like Pasta: @Model.PastaPercentage%</p>
                <p>Percentage of people who like Pap and Wors: @Model.PapWorsPercentage%</p>

                <p>People like to eat out: @Model.EatOutRatingAverage</p>
                <p>People like to watch movies: @Model.WatchMoviesRatingAverage</p>
                <p>People like to watch TV: @Model.WatchTVRatingAverage</p>
                <p>People like to listen to the radio: @Model.ListenToRadioRatingAverage</p>

                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-dark btn-sm mt-4 w-100">Ok</a>
            </div>
        </div>

       
    </div>
</div>
