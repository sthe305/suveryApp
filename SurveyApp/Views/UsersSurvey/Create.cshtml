@model SurveyViewModel

@{
    ViewData["Title"] = "Take Survey";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <h4>Take our Survey</h4>
                <hr />


                <form asp-action="Create" method="post">
                    <h4 class="mt-2 mb-2">Personal Details</h4>
                    <div class="form-group mb-4">
                        <label asp-for="Surname">Surname</label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="FirstNames">First Names</label>
                        <input asp-for="FirstNames" class="form-control" />
                        <span asp-validation-for="FirstNames" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="ContactNumber">Contact Number</label>
                        <input asp-for="ContactNumber" class="form-control" />
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Date">Date</label>
                        <input asp-for="Date" type="date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Age">Age</label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2 mt-4">
                        <label asp-for="FavouriteFoods">What is your favorite food? (You can choose more than 1 answer)</label>
                        <br />
                        <input type="checkbox" asp-for="FavouriteFoods" value="Pizza" /> Pizza<br />
                        <input type="checkbox" asp-for="FavouriteFoods" value="Pasta" /> Pasta<br />
                        <input type="checkbox" asp-for="FavouriteFoods" value="Pap and Wors" /> Pap and Wors<br />
                        <input type="checkbox" asp-for="FavouriteFoods" value="Chicken stir fry" /> Chicken stir fry<br />
                        <input type="checkbox" asp-for="FavouriteFoods" value="Beef stir fry" /> Beef stir fry<br />
                        <input type="checkbox" asp-for="FavouriteFoods" value="Other" /> Other<br />
                        <span asp-validation-for="FavouriteFoods" class="text-danger"></span>
                    </div>

                    <h6 class="form-group mb-2 mt-4">
                        On a scale of 1 to 5 indicate whether you strongly agree to strongly disagree
                    </h6>
                    
                    
                    <table class="table">
                        <thead table-dark>
                            <tr>
                                <th></th>
                                <th scope="col">
                                    Strongly Agree
                                    (1)
                                </th>
                                <th scope="col">
                                    Agree
                                    (2)
                                </th>
                                <th scope="col">
                                    Neutral
                                    (3)
                                </th>
                                <th scope="col">
                                    Disagree
                                    (4)
                                </th>
                                <th>
                                    Strongly disagree
(5)

                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <th>I like to eat out</th>
                                <td><input type="radio" asp-for="EatOutRating" value="1" /> Strongly Agree</td>
                                <td><input type="radio" asp-for="EatOutRating" value="2" /> Agree</td>
                                <td><input type="radio" asp-for="EatOutRating" value="3" /> Neutral</td>
                                <td><input type="radio" asp-for="EatOutRating" value="4" /> Disagree</td>
                                <td><input type="radio" asp-for="EatOutRating" value="5" /> Strongly Disagree</td>
                                <span asp-validation-for="EatOutRating" class="text-danger"></span>
                            </tr>

                            <tr>
                                <th>I like to watch movies</th>
                                <th><input type="radio" asp-for="WatchMoviesRating" value="1" /> Strongly Agree</th>
                                <th><input type="radio" asp-for="WatchMoviesRating" value="2" /> Agree</th>
                                <th><input type="radio" asp-for="WatchMoviesRating" value="3" /> Neutral</th>
                                <th><input type="radio" asp-for="WatchMoviesRating" value="4" /> Disagree</th>
                                <th><input type="radio" asp-for="WatchMoviesRating" value="5" /> Strongly Disagree</th>
                                <span asp-validation-for="WatchMoviesRating" class="text-danger"></span>
                            </tr>

                             <tr>
                                <th>I like to watch TV</th>
                                <th><input type="radio" asp-for="WatchTVRating" value="1" /> Strongly Agree</th>
                                <th><input type="radio" asp-for="WatchTVRating" value="2" /> Agree</th>
                                <th><input type="radio" asp-for="WatchTVRating" value="3" /> Neutral</th>
                                <th><input type="radio" asp-for="WatchTVRating" value="4" /> Disagree</th>
                                <th><input type="radio" asp-for="WatchTVRating" value="5" /> Strongly Disagree</th>
                                <span asp-validation-for="WatchTVRating" class="text-danger"></span>
                            </tr>

                            <tr>
                                <th>I like to listen to the radio</th>
                                <th><input type="radio" asp-for="ListenToRadioRating" value="1" /> Strongly Agree</th>
                                <th><input type="radio" asp-for="ListenToRadioRating" value="2" /> Agree</th>
                                <th><input type="radio" asp-for="ListenToRadioRating" value="3" /> Neutral</th>
                                <th><input type="radio" asp-for="ListenToRadioRating" value="4" /> Disagree</th>
                                <th><input type="radio" asp-for="ListenToRadioRating" value="5" /> Strongly Disagree</th>
                                <span asp-validation-for="ListenToRadioRating" class="text-danger"></span>
                            </tr>

                            </tbody>
                    </table>

                    <div class="row mt-4 mb-4">
                        <div class="offset-sm-4 col-sm-4">
                            <button type="submit" class="btn  btn-dark w-100">Submit</button>
                        </div>
                    </div>

                 
                </form>


            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
