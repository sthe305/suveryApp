@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h6>Welcome</h6>

    <div class="row mt-4">
        <div class="offset-sm-2 col-sm-4">
            <div class="card">
                <img src="https://images.unsplash.com/photo-1450101499163-c8848c66ca85?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80" class="card-img-top" alt="...">
                <div class="card-body">
                    <a asp-area="" asp-controller="UsersSurvey" asp-action="Create" class="btn btn-outline-dark btn-sm">Fill out survey</a>
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="card">
                <img src="https://images.unsplash.com/photo-1504868584819-f8e8b4b6d7e3?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1176&q=80" class="card-img-top" alt="...">
                <div class="card-body">
                    <a asp-area="" asp-controller="UsersSurvey" asp-action="SurveyResults" class="btn btn-outline-dark btn-sm">View survey results</a>
                </div>
            </div>
        </div>

    </div>
</div>
